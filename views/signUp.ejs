<%- include('partials/header') -%>

<div id="<%- failureMsg -%>" class="<%-loginMsgAttr-%>"><%= loginMsg %></div>

<div id="aligner">
  <div id="aligner-in">
    <form action="" method="POST">
      <h1 id="login-title">Sign Up</h1>
      <input
        type="text"
        name="Name"
        id="uName"
        placeholder="Enter username"
        size="30"
        autocomplete="off"
        autofocus
        class="input-field"
      />
      <br /><br />
      <input
        type="email"
        name="email"
        id="email"
        placeholder="Enter email"
        size="30"
        autocomplete="off"
        class="input-field"
      />
      <br /><br />
      <input
        type="password"
        name="password"
        id="password"
        placeholder="Enter password"
        size="30"
        class="input-field"
      />
      <br /><br />
      <input
        type="submit"
        name="submit"
        value="Go back"
        class="btn"
        id="go-back"
      />
      <input
        type="submit"
        name="submit"
        value="Register"
        class="btn"
        id="registration"
      />
    </form>
  </div>
</div>

<%- include('partials/footer') -%>
